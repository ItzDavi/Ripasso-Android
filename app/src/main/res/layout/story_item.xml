<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/story_imageview"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:shapeAppearance="@style/ShapeAppearance.App.RoundedCorners"
        android:background="@drawable/custom_story_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/story_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/story_imageview"
        app:layout_constraintStart_toStartOf="@id/story_imageview"
        app:layout_constraintEnd_toEndOf="@id/story_imageview" />

</androidx.constraintlayout.widget.ConstraintLayout>